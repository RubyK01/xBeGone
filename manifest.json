{
    "manifest_version": 2,
    "name": "xBeGone",
    "version": "1.2",
    "description": "Automatically replaces URLs containing https://x.com with https://fxtwitter.com when copied.",
    "permissions": [
      "clipboardRead",
      "clipboardWrite",
      "activeTab"
    ],
    "background": {
      "scripts": ["background.js"]
    },
    "browser_action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icons/16.png",
        "48": "icons/48.png",
        "128": "icons/128.png"
      }
    },
    "icons": {
      "16": "icons/16.png",
      "48": "icons/48.png",
      "128": "icons/128.png"
    }
  }
  